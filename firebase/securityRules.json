{
  "rules": {
    "premiumApps": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isPaid').val() === true"
    },
    "userInteractions": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}